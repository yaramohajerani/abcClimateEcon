{
  "simulation": {
    "name": "climate_3_layer_geo",
    "trade_logging": "off",
    "random_seed": 42,
    "rounds": 20,
    "result_path": "result_climate_3_layer"
  },
  "climate": {
    "stress_enabled": true,
    "acute_stress_probability": 0.15,
    "chronic_stress_factor": 0.96,
    "geographical_effects": true,
    "shock_rules": [
      {
        "name": "global_commodity_shock",
        "description": "Global shock affecting all commodity producers",
        "probability": 0.10,
        "agent_types": ["commodity_producer"],
        "continents": ["all"],
        "stress_factor": 0.7,
        "duration": 1
      },
      {
        "name": "asian_manufacturing_shock",
        "description": "Manufacturing disruption in Asia",
        "probability": 0.08,
        "agent_types": ["commodity_producer", "intermediary_firm"],
        "continents": ["Asia"],
        "stress_factor": 0.6,
        "duration": 1
      },
      {
        "name": "extreme_weather_americas",
        "description": "Extreme weather affecting North and South America",
        "probability": 0.05,
        "agent_types": ["commodity_producer"],
        "continents": ["North America", "South America"],
        "stress_factor": 0.5,
        "duration": 2
      },
      {
        "name": "supply_chain_disruption",
        "description": "Major supply chain disruption affecting all production",
        "probability": 0.03,
        "agent_types": ["commodity_producer", "intermediary_firm", "final_goods_firm"],
        "continents": ["all"],
        "stress_factor": 0.8,
        "duration": 1
      }
    ]
  },
  "agents": {
    "commodity_producer": {
      "count": 3,
      "initial_money": 50,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 1.0,
        "inputs": {
          "labor": 1
        },
        "output": "commodity",
        "price": 1.0
      },
      "climate": {
        "base_vulnerability": 0.3,
        "vulnerability_variance": 0.1
      },
      "geographical_distribution": ["Europe", "Asia", "Africa"]
    },
    "intermediary_firm": {
      "count": 2,
      "initial_money": 50,
      "initial_inventory": {
        "commodity": 1
      },
      "production": {
        "base_output_quantity": 1.5,
        "inputs": {
          "labor": 1,
          "commodity": 1
        },
        "output": "intermediate_good",
        "price": 2.0
      },
      "climate": {
        "base_vulnerability": 0.1,
        "vulnerability_variance": 0.05
      },
      "geographical_distribution": ["North America", "Europe"]
    },
    "final_goods_firm": {
      "count": 2,
      "initial_money": 60,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 1.8,
        "inputs": {
          "labor": 1,
          "intermediate_good": 1
        },
        "output": "final_good",
        "price": 5.0
      },
      "climate": {
        "base_vulnerability": 0.05,
        "vulnerability_variance": 0.02
      },
      "geographical_distribution": ["North America", "South America"]
    },
    "household": {
      "count": 20,
      "initial_money": 10,
      "initial_inventory": {},
      "labor": {
        "endowment": 1,
        "wage": 1.0
      },
      "consumption": {
        "preference": "final_good",
        "budget_fraction": 0.8
      },
      "geographical_distribution": ["all"]
    }
  },
  "data_collection": {
    "track_goods": {
      "commodity_producer": ["commodity"],
      "intermediary_firm": ["intermediate_good"],
      "final_goods_firm": ["final_good"],
      "household": ["final_good"]
    }
  },
  "visualization": {
    "create_visualizations": true,
    "create_dynamic_visualization": true,
    "save_climate_summary": true
  }
