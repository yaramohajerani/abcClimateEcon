{
  "_description": "Demonstration of overhead stress modes for all agents in the 3layer model with different stress factors per agent type",
  "simulation": {
    "name": "climate_3_layer_overhead_stress",
    "trade_logging": "off",
    "random_seed": 12345,
    "rounds": 25,
    "result_path": "result_overhead_stress"
  },
  "climate": {
    "stress_enabled": true,
    "geographical_effects": true,
    "stress_mode": "overhead",
    "agent_stress_modes": {
      "commodity_producer": "overhead",
      "intermediary_firm": "overhead",
      "final_goods_firm": "overhead"
    },
    "chronic_rules": [
      {
        "name": "global_degradation",
        "description": "Long-term climate degradation affecting all production",
        "agent_types": ["commodity_producer", "intermediary_firm", "final_goods_firm"],
        "continents": ["all"],
        "stress_factor": 0.995
      },
      {
        "name": "commodity_overhead_pressure",
        "description": "Increasing overhead pressures on commodity producers due to climate regulations",
        "agent_types": ["commodity_producer"],
        "continents": ["all"],
        "stress_factor": 0.98,
        "stress_mode": "overhead"
      }
    ],
    "shock_rules": [
      {
        "name": "extreme_weather_overhead_impact",
        "description": "Extreme weather increasing overhead costs across supply chain",
        "probability": 0.15,
        "agent_types": ["commodity_producer", "intermediary_firm"],
        "continents": ["all"],
        "stress_factor": 0.7,
        "stress_mode": "overhead"
      },
      {
        "name": "commodity_specific_overhead_shock",
        "description": "Regulatory shock increasing commodity producer overhead costs",
        "probability": 0.1,
        "agent_types": ["commodity_producer"],
        "continents": ["Asia", "Africa"],
        "stress_factor": 0.6,
        "stress_mode": "overhead"
      }
    ]
  },
  "agents": {
    "commodity_producer": {
      "count": 6,
      "initial_money": 40,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 0.8,
        "base_overhead": 2.0,
        "inputs": {
          "labor": 1
        },
        "output": "commodity",
        "price": 1.5
      },
      "climate": {
        "base_vulnerability": 0.4,
        "vulnerability_variance": 0.1,
        "cost_sharing": {
          "customer_share": 0.4
        }
      },
      "geographical_distribution": ["Asia", "Africa", "South America", "Europe", "North America", "Asia"]
    },
    "intermediary_firm": {
      "count": 4,
      "initial_money": 45,
      "initial_inventory": {
        "commodity": 0.5
      },
      "production": {
        "base_output_quantity": 1.0,
        "base_overhead": 1.5,
        "inputs": {
          "labor": 1,
          "commodity": 1
        },
        "output": "intermediate_good",
        "price": 3.0
      },
      "climate": {
        "base_vulnerability": 0.2,
        "vulnerability_variance": 0.08,
        "cost_sharing": {
          "customer_share": 0.4
        }
      },
      "geographical_distribution": ["Asia", "Europe", "North America", "South America"]
    },
    "final_goods_firm": {
      "count": 3,
      "initial_money": 50,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 1.2,
        "base_overhead": 1.0,
        "inputs": {
          "labor": 1,
          "intermediate_good": 1
        },
        "output": "final_good",
        "price": 7
      },
      "climate": {
        "base_vulnerability": 0.1,
        "vulnerability_variance": 0.05,
        "cost_sharing": {
          "customer_share": 0.2
        }
      },
      "geographical_distribution": ["North America", "Europe", "Asia"]
    },
    "household": {
      "count": 30,
      "initial_money": 8,
      "initial_inventory": {},
      "labor": {
        "endowment": 1,
        "wage": 0.8
      },
      "consumption": {
        "preference": "final_good",
        "budget_fraction": 0.8,
        "consumption_fraction": 0.9,
        "minimum_survival_consumption": 5
      },
      "geographical_distribution": ["all"]
    }
  },
  "data_collection": {
    "track_goods": {
      "commodity_producer": ["money", "commodity"],
      "intermediary_firm": ["money", "intermediate_good"],
      "final_goods_firm": ["money", "final_good"],
      "household": ["money", "final_good"]
    }
  },
  "visualization": {
    "create_visualizations": false,
    "create_dynamic_visualization": true
  }
} 