{
  "_description": "Asia-focused scenario with higher production in Asia and targeted climate shocks",
  "simulation": {
    "name": "climate_3_layer_asia_focus",
    "trade_logging": "off",
    "random_seed": 42,
    "rounds": 25,
    "result_path": "result_asia_focus"
  },
  "climate": {
    "stress_enabled": true,
    "acute_stress_probability": 0.12,
    "chronic_stress_factor": 0.96,
    "geographical_effects": true,
    "shock_rules": [
      {
        "name": "asian_manufacturing_crisis",
        "description": "Major manufacturing disruption in Asia affecting all production",
        "probability": 0.20,
        "agent_types": ["commodity_producer", "intermediary_firm"],
        "continents": ["Asia"],
        "stress_factor": 0.5,
        "duration": 2
      },
      {
        "name": "asian_commodity_shortage",
        "description": "Commodity production crisis in Asia",
        "probability": 0.15,
        "agent_types": ["commodity_producer"],
        "continents": ["Asia"],
        "stress_factor": 0.6,
        "duration": 1
      },
      {
        "name": "global_supply_chain_shock",
        "description": "Global supply chain disruption due to Asian production issues",
        "probability": 0.08,
        "agent_types": ["commodity_producer", "intermediary_firm", "final_goods_firm"],
        "continents": ["all"],
        "stress_factor": 0.8,
        "duration": 1
      }
    ]
  },
  "agents": {
    "commodity_producer": {
      "count": 5,
      "initial_money": 75,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 1.5,
        "inputs": {
          "labor": 1
        },
        "output": "commodity",
        "price": 1.2
      },
      "climate": {
        "base_vulnerability": 0.4,
        "vulnerability_variance": 0.15
      },
      "geographical_distribution": ["Asia", "Asia", "Asia", "Europe", "Africa"]
    },
    "intermediary_firm": {
      "count": 3,
      "initial_money": 60,
      "initial_inventory": {
        "commodity": 2
      },
      "production": {
        "base_output_quantity": 2.0,
        "inputs": {
          "labor": 1,
          "commodity": 1
        },
        "output": "intermediate_good",
        "price": 2.5
      },
      "climate": {
        "base_vulnerability": 0.2,
        "vulnerability_variance": 0.08
      },
      "geographical_distribution": ["Asia", "Asia", "Europe"]
    },
    "final_goods_firm": {
      "count": 2,
      "initial_money": 80,
      "initial_inventory": {},
      "production": {
        "base_output_quantity": 2.2,
        "inputs": {
          "labor": 1,
          "intermediate_good": 1
        },
        "output": "final_good",
        "price": 7
      },
      "climate": {
        "base_vulnerability": 0.08,
        "vulnerability_variance": 0.03
      },
      "geographical_distribution": ["North America", "Europe"]
    },
    "household": {
      "count": 25,
      "initial_money": 15,
      "initial_inventory": {},
      "labor": {
        "endowment": 1,
        "wage": 1.2
      },
      "consumption": {
        "preference": "final_good",
        "budget_fraction": 0.8,
        "consumption_fraction": 0.9,
        "minimum_survival_consumption": 0.2
      },
      "geographical_distribution": ["all"]
    }
  },
  "data_collection": {
    "track_goods": {
      "commodity_producer": ["commodity"],
      "intermediary_firm": ["intermediate_good"],
      "final_goods_firm": ["final_good"],
      "household": ["final_good"]
    }
  },
  "visualization": {
    "create_visualizations": true,
    "create_dynamic_visualization": true,
    "save_climate_summary": true
  }
} 